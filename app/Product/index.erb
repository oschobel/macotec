<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1><%= Localization::Product[:products] %></h1>
    <% if System::get_property('platform') == 'APPLE' %>
    	<a href="<%= Rho::RhoConfig.start_path %>" class="ui-btn-left" data-icon="back" data-direction="reverse" <%= "data-ajax='false'" if is_bb6 %>>
      		<%= Localization::System[:back] %>
    	</a>
  	<% else %>
    <a href="<%= Rho::RhoConfig.start_path %>" class="ui-btn-left" data-icon="back" data-direction="reverse" <%= "data-ajax='false'" if is_bb6 %>>
      <%= Localization::System[:back] %>
    </a>
    <% end %>
  </div>
  <div style="color: #000000; text-decoration: none" data-role="content">
  	<ul data-role="listview">
	<% @categories.each do |key, category| %>
		<li>
			<a href="<%= url_for :controller => :Product, :action => :sub_categories, :query => {:category => key} %>"><%= category %></a>
		</li>
	<% end %>
	</ul>
  </div>

</div>